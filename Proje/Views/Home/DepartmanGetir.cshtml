@{
}
@model Proje.Models.departmanlar

@using (Html.BeginForm("DepartmanGuncelle", "Home", FormMethod.Post)) 
{

<form method="post">

        <table class="table table-hover mt-5 shadow-lg p-3 mb-5 bg-white rounded">
            <thead>
                <tr class="text-center">
                    <th scope="col">Departman-ID @Html.TextBoxFor(x=>x.Id, new{@class="form-control"})</th>
                    <th scope="col">Görev @Html.TextBoxFor(x=>x.departmanad, new{@class="form-control"})</th>
                    <th scope="col"> Görev Detay @Html.TextBoxFor(x=>x.Detay, new{@class="form-control"})</th>
                    <th scope="col"> Görevi Alan @Html.TextBoxFor(x=>x.GorevAdami, new{@class="form-control"})</th>
                </tr>
            </thead>
            </table>
    <br />
    <button type="submit" class="btn btn-outline-warning">Departmanı Güncelle</button>

</form>

}

